@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model?.Count() > 0)
{
    <partial name="SearchPartialView" />
    <div asp-validation-summary="All"></div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateHire)
                </th>
                <th>PIC</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateHire)
                    </td>

                    <td>
                        <img src="~/Files/Images/@item.ImageName" alt="@item.Name" class="img-fluid img-thumbnail w-100 " />
                    </td>
                    <td>


                        <partial name="_ButtonPartialView" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class=" text-danger ">
            There is no any Employee
        </h3>
    </div>
}
