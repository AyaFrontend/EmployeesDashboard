
@model IEnumerable<EmployeesDashboard.Models.DepartmentViewModel>

    <a asp-action="Create" class="btn btn-success my-3">Creat New Department</a>
    @if (Model?.Count() > 0)
    {
        <partial name="SearchPartialView" />
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(M => M.Code)</th>
                    <th>@Html.DisplayNameFor(M => M.Name)</th>
                    
                    <th>Actions</th>

                </tr>
            </thead>

            <tbody>

                @foreach (var department in Model)
                {
                    <tr>

                        <td>
                            @department.Name
                        </td>
                       
                        <td>
                            <partial name="_ButtonPartialView" model="@department.Id" />
                        </td>
                    </tr>
                }


            </tbody>


        </table>
    }
    else
    {
        <div>
            <h3 class=" text-danger ">
                There is no any department
            </h3>
        </div>
    }
